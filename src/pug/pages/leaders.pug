.page-wrapper.inner-page
	h2.font-size-24.inner-page__title.mb-32 Руководители
	.row.contact-list.grid-gutter-20
		each object, key in data.leaders
			.col-xxl-3.col-xl-4.col-md-4.col-sm-6.grid-gutter-20__col
				a(href="#" data-bs-target='#profile-detail-carousel' data-bs-slide-to=`${object.slide}` data-bs-toggle='modal').leader-box.box-default.bd-radius-12
						img(src=`images/leaders/img-${key+1}.jpg`, alt="").leader-box__image
						.leader-box__info
							h3.leader-box__name=object.name
							.leader-box__position=object.position    


